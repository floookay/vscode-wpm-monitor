{
	"name": "vscode-wpm-monitor",
	"displayName": "wpm monitor",
	"description": "displays the current wpm in the status bar",
	"version": "0.2.1",
	"publisher": "floookay",
	"icon": "img/logo_x512.png",
	"author": {
		"name": "floookay",
		"email": "info@floookay.de",
		"url": "https://github.com/floookay"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/floookay/vscode-wpm-monitor/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/floookay/vscode-wpm-monitor.git"
	},
	"homepage": "https://github.com/hoovercj/vscode-power-mode",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.modeSwitcher",
				"title": "WPM-monitor: switch WPM mode"
			},
			{
				"command": "extension.modeSetNumberOfCharacters",
				"title": "WPM-monitor: set number of characters to be considered for WPM calculation"
			},
			{
				"command": "extension.modeSetLengthOfTimeframe",
				"title": "WPM-monitor: set length of timeframe in which the WPM will be calculated (in seconds)"
			},
			{
				"command": "extension.setSpecialEffectThreshold",
				"title": "WPM-monitor: set the WPM threshold after which the special effect will be displayed"
			},
			{
				"command": "extension.reset",
				"title": "WPM-monitor: reset and restart the WPM calculator"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
